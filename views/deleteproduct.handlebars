<header>
    <nav class="navbar navbar-expand-lg">
        <a class="navbar-brand" href="/">Oimazon</a>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a href="/products/add">Add product</a>
            </li>
            <li class="nav-item">
                <a href="/products/delete">Delete product</a>
            </li>
        </ul>
    </nav>
</header>
<div class="container text-center">
        <div class="form-group">
            <label for="product-id">Delete by ID</label>
            <input type="text" class="form-control" id="product-id">
        </div>
        <button type="submit" class="btn btn-primary" id="delete-btn">Delete</button>
    <div class="products">
        <ul>
            {{#each products}}
                <li>
                    <span>{{this.product}}</span>
                    <span>ID: {{this._id}}</span>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
<div class="container text-center">
        <a href="/" class="btn mx-auto my-auto">Return Home</a>
</div>
<script>
    $('#delete-btn').on('click', () => {
        let $id = $('#product-id').val();
        
        $.ajax({
            url: '/products/' + $id,
            type: 'DELETE',
            success: function(){
                window.location.reload('/');
            },
            error: function(){
                alert('Product with that ID number wasn\'t found');
            }
        });
    });
</script>